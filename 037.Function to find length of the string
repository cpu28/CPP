#include <iostream>
using namespace std;

int stringlen(string s)
{
    int l;
    for (int i=0;s[i]!='\0';i++)
    {
        l=i+1;
    }
    return l;
}

int main()
{
    char str[30];
    int len=0;
    cout<<"Enter the string:"<<endl;
    cin.getline(str,30);
    cout<<"length of string "<<"'"<<str<<"'"<<" is "<<stringlen(str)<<endl;

    return 0;
}
