#include <iostream>
#include<string>
using namespace std;

int main()
{
    string mail,username;
    username="";
    cout<<"Enter the mail id:";
    getline(cin,mail);
    for (int i=0;mail[i]!='@';i++)
    {
        username[i]=mail[i];
        username+=username[i];
    }
    cout<<"user name is "<<username;
    return 0;
}
